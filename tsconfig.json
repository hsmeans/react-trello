{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
